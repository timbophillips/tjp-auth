{
  "name": "hasura-auth-nodejs-server",
  "type": "module",
  "version": "1.0.0",
  "description": "Node JS server providing JWT and webhook based authorization for Hasura",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run copy-static-files && nodemon --ignore 'local-database/*.json' --exec node --loader ts-node/esm ./src/server.ts",
    "watch-ts": "tsc -w",
    "build": "tsc && npm run copy-static-files && npm run copy-static-files-dist",
    "lint": "eslint 'src/**/*.{js,ts}' --quiet --fix",
    "start": "npm run build && node ./dist/server.js",
    "copy-static-files-dist": "rm -rf ./dist/static && cp -r ./src/static ./dist/",
    "copy-static-files": "rm -rf ./src/static && cp -r ../hasura-auth-frontend/dist ./src/static",
    "serve": "npm run build && node dist/server.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonfile": "^6.1.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "crypto-random-string": "^5.0.0",
    "eslint": "^9.3.0",
    "nodemon": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.6.2",
    "node-fetch": "^3.3.2"
  }
}
